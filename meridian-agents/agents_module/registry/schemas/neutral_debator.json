{
  "input_schema": {
    "type": "object",
    "required": ["risk_debate_state"],
    "properties": {
      "risk_debate_state": {"type": "object"},
      "trader_investment_plan": {"type": "string"}
    }
  },
  "output_schema": {
    "type": "object",
    "required": ["agent_id", "status", "payload"],
    "properties": {
      "agent_id": {"type": "string", "const": "neutral_debator"},
      "status": {"type": "string", "enum": ["success", "failure", "partial"]},
      "payload": {
        "type": "object",
        "properties": {
          "neutral_history": {"type": "string"},
          "neutral_argument": {"type": "string"}
        }
      }
    }
  }
}

