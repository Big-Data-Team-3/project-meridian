{
  "input_schema": {
    "type": "object",
    "required": ["investment_plan"],
    "properties": {
      "investment_plan": {"type": "string"},
      "market_report": {"type": "string"},
      "fundamentals_report": {"type": "string"}
    }
  },
  "output_schema": {
    "type": "object",
    "required": ["agent_id", "status", "payload"],
    "properties": {
      "agent_id": {"type": "string", "const": "trader"},
      "status": {"type": "string", "enum": ["success", "failure", "partial"]},
      "payload": {
        "type": "object",
        "properties": {
          "trader_investment_plan": {"type": "string"},
          "recommendation": {"type": "string", "enum": ["BUY", "SELL", "HOLD"]}
        }
      }
    }
  }
}

